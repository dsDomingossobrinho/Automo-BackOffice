# Automo BackOffice Environment Configuration

# Application
DEBUG_MODE=true
BASE_URL=http://localhost:3000
APP_NAME="Automo BackOffice"
APP_VERSION=1.0.0

# API Backend Configuration
API_BASE_URL=http://localhost:8080
API_TIMEOUT=30

# Database Configuration (if needed for local storage)
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=automo_backoffice
DB_USERNAME=automo
DB_PASSWORD=automo123

# Redis Configuration (for sessions and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Session Configuration
SESSION_LIFETIME=14400
SESSION_NAME=automo_backoffice_session

# Security
CSRF_TOKEN_NAME=_token

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging
LOG_LEVEL=debug
LOG_FILE=storage/logs/app.log

# CORS Configuration (if needed)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Email Configuration (if needed for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@automo.com
MAIL_FROM_NAME="Automo BackOffice"

# Production Settings
PHP_DISPLAY_ERRORS=Off
PHP_ERROR_REPORTING=E_ERROR
PHP_LOG_ERRORS=On
PHP_SESSION_SAVE_HANDLER=redis
PHP_SESSION_SAVE_PATH=tcp://redis:6379