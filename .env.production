# Automo BackOffice Environment Configuration - PRODUCTION

# Application
DEBUG_MODE=false
BASE_URL=https://your-domain.com
APP_NAME="Automo BackOffice"
APP_VERSION=1.0.0

# API Backend Configuration (Production)
# Change this to your actual backend URL in production
API_BASE_URL=https://your-backend-domain.com
API_TIMEOUT=30

# Session Configuration (File-based storage)
SESSION_LIFETIME=14400
SESSION_NAME=automo_backoffice_session

# Security
CSRF_TOKEN_NAME=_token

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx